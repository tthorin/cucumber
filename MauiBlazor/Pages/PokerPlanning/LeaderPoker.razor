<div class="back-btn-container">
	<button @onclick="()=>NavBackChanged.InvokeAsync(Pages.LeaderSelectMode)" class="back-btn">Back to mode select</button>
</div>
@if (pokerNav == Pages.LeaderPokerSelectStyle)
{
	<LeaderPokerSelectStyle @bind-PokerNav="pokerNav"/>
}
else if(pokerNav == Pages.LeaderPokerResultAwait)
{
	<LeaderPokerResultAwait @bind-PokerNav="pokerNav"/>
}
else if (pokerNav == Pages.LeaderPokerResultView)
{
	<h1>Result view not done</h1>
}
else
{
	<code>In LeaderPoker.razor, something went wrong =(</code>
}

@code {
	[Parameter]
	public Pages NavBack { get; set; }

	[Parameter]
	public EventCallback<Pages> NavBackChanged { get; set; }

	private Pages pokerNav = Pages.LeaderPokerSelectStyle;
}
